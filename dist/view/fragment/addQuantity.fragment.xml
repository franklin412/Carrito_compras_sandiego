<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog title="Agregar Material" state="Success">
		<content>
			<f:Form editable="true" class="sapUiSizeCompact">
				<f:layout>
					<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="true" emptySpanXL="0"
						emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement id="sInpQuantityLabel" label="Cantidad">
								<f:fields>
									<StepInput
                                        change="onChangeQuantity"
										id="sInpQuantity"
										min="1"
                                        validationMode="LiveChange"
										value="1"
										valueStateText="Ingrese la cantidad a aÃ±adir"
										valueState="Information">
										<layoutData>
											<l:GridData span="XL2 L2 M2 S12" />
										</layoutData>
									</StepInput>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</content>
		<beginButton>
			<Button text="Agregar" press="onAddQuantity" type="Emphasized" icon="sap-icon://cart" class="sapUiSizeCompact"/>
		</beginButton>
		<endButton>
			<Button text="Cancelar" press="onCancelQuantity" icon="sap-icon://decline" class="sapUiSizeCompact"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>